---
const works = [
  {
    title: "Enterprise Architecture Transformation",
    company: "Major Financial Institution",
    description: "Led the transformation of legacy systems to a modern reactive architecture.",
    year: "2023"
  },
  {
    title: "Cloud-Native Platform Development",
    company: "Tech Startup",
    description: "Designed and implemented a scalable cloud-native platform using reactive patterns.",
    year: "2022"
  }
];
---

<section id="portfolio" class="portfolio-section">
  <h2 class="text-gradient">Portfolio</h2>
  <div class="timeline">
    {works.map(work => (
      <div class="timeline-item">
        <div class="year">{work.year}</div>
        <div class="content">
          <h3>{work.title}</h3>
          <h4>{work.company}</h4>
          <p>{work.description}</p>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  .portfolio-section {
    margin: 2rem 0;
  }
  .timeline {
    margin-top: 2rem;
  }
  .timeline-item {
    display: grid;
    grid-template-columns: 100px 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
    padding: 1rem;
    background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
    border-radius: 8px;
  }
  .year {
    color: rgb(var(--accent-light));
    font-weight: bold;
  }
  .content h3 {
    margin: 0;
    color: white;
  }
  .content h4 {
    color: rgb(var(--accent-light));
    margin: 0.5rem 0;
  }
</style>